FROM docker.io/library/archlinux:latest

MAINTAINER "Garrick Welsh <garrick.welsh@gmail.com>"

RUN pacman -Syu --noconfirm

RUN pacman -S --noconfirm base-devel rustup nodejs helix neovim

# RUN groupadd -gid 1000 gaz

RUN useradd gaz -G wheel -m -u 1000 

# RUN mkdir /workspace

RUN chown gaz:gaz -R /workspace

USER gaz

RUN rustup toolchain install stable && rustup component add rust-analyzer


VOLUME ["/workspace"]
