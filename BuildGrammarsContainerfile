FROM docker.io/library/archlinux:latest

MAINTAINER "Garrick Welsh <garrick.welsh@gmail.com>"

RUN pacman -Syu --noconfirm

RUN pacman -S --noconfirm base-devel rustup nodejs helix neovim rust-analyzer starship

# RUN groupadd -gid 1000 gaz

RUN useradd gaz -G wheel -m -u 1000 

USER gaz

RUN rustup toolchain install stable

VOLUME ["/workspace"]
